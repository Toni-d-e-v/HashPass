{
 
    "manifest_version": 2,
    "name": "HashPass",
    "version": "1.0",
   
    "description": "Makes simple password secure!",
   
    "background": {
      "scripts": ["content-script.js"]
    },
   
    "permissions": [
        "<all_urls>",
        "activeTab",
        "menus",
        "tabs",
        "contextMenus"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
      }
    ],

    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "SecurePass",
      "default_popup": "view.html"
    }
}
   